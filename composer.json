{
  "name" : "fastybird/json-api",
  "type" : "library",
  "description" : "FastyBird {JSON:API} api tools with data hydration",
  "keywords" : [
    "fastybird",
    "fb",
    "libs",
    "library",
    "api",
    "jsonapi"
  ],

  "homepage" : "https://www.fastybird.com",

  "license" : "Apache-2.0",

  "authors" : [
    {
      "name" : "FastyBird s.r.o.",
      "email" : "code@fastybird.com",
      "homepage" : "https://www.fastybird.com/"
    },
    {
      "name" : "Adam Kadlec",
      "email" : "adam.kadlec@fastybird.com"
    }
  ],

  "prefer-stable" : true,

  "minimum-stability" : "stable",

  "require" : {
    "php": ">=7.4.0",
    "ext-json": "*",
    "consistence/consistence": "^2.0",
    "contributte/translation": "^0.8",
    "fastybird/web-server": "^0.1",
    "ipub/doctrine-crud": "^3.0",
    "ipub/json-api-document": "^0.2",
    "neomerx/json-api": "^4.0",
    "nette/bootstrap": "^3.1",
    "nette/di": "^3.0",
    "nette/utils": "^3.2",
    "phpdocumentor/reflection-docblock": "^5.2",
    "psr/log": "^1.1",
    "ramsey/uuid": "^4.1"
  },

  "require-dev" : {
    "mockery/mockery" : "^1.4",
    "ninjify/nunjuck" : "^0.3",
    "ninjify/qa" : "^0.12",
    "pds/skeleton" : "~1.0",
    "phpstan/extension-installer" : "^1.1",
    "phpstan/phpstan" : "^0.12",
    "phpstan/phpstan-deprecation-rules" : "^0.12",
    "phpstan/phpstan-doctrine" : "^0.12",
    "phpstan/phpstan-nette" : "^0.12",
    "phpstan/phpstan-strict-rules" : "^0.12",
    "tracy/tracy" : "^2.8"
  },

  "autoload" : {
    "psr-4" : {
      "FastyBird\\JsonApi\\" : "src/"
    }
  },

  "autoload-dev" : {
    "psr-4" : {
      "Tests\\Cases\\" : "tests/cases",
      "Tests\\Fixtures\\" : "tests/fixtures"
    }
  },

  "config" : {
    "sort-packages" : true
  }
}
